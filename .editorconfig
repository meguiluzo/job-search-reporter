# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.java]
indent_size = 2
max_line_length = 100

[*.md]
indent_size = 1
max_line_length = off
trim_trailing_whitespace = false

[*.yml]
indent_size = 2

[*.sh]
end_of_line = lf
